<div class="large-up-hide image_medium_bg" style="background:linear-gradient(182deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.75) 71.88%, rgba(255, 255, 255, 0.00) 100%),url({{image}})">
  <div class="page-width">
    <div class="banner-content">
      <h2 class="banner-title">
        {{ title }}
      </h2>
      <p class="banner-desc">
        {{ desc }}
      </p>
      {% render 'button', title: {{text}}, link: {{link}}, icon: true %}
    </div>
    <div class="hidden-content"></div>
  </div>
</div>


