{{ 'customer.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: 21px;
    padding-bottom: 21px;
  }

  /* social login css  */
  .ssw-social-login-widget {
    margin-bottom: 0;
    text-align: center;
  }
  .ssw-socialconnect {
    display: flex;
    align-items: center;
    gap: 10px;
    justify-content: space-between;
  }
  .ssw-social-login-widget {
    padding: 0 2rem;
  }
  .ssw-socialconnect > .ssw-fbconnect.ssw-social-btn > a {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    min-height: inherit;
    background: #fff;
    border: 1px solid var(--black-grey-1, #E7E7E7);
    box-sizing: border-box;
    color: #000000 !important;
    font-family: Nunito;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-transform: uppercase;
  }
  .ssw-socialconnect > div.ssw-social-btn:last-child {
    margin-bottom: 0;
  }
  .ssw-socialconnect > .ssw-gconnect > a:hover {
    box-shadow: none;
  }
  .ssw-socialconnect > .ssw-gconnect > a {
    background: #fff;
    box-shadow: none;
    color: black;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    min-height: inherit;
    background: #fff;
    border: 1px solid var(--black-grey-1, #E7E7E7);
    box-sizing: border-box;
    color: #000000 !important;
    font-family: Nunito;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-transform: uppercase;
    padding: 14px !important;
  }
  .ssw-socialconnect > .ssw-fbconnect.ssw-social-btn > a > span,
  .ssw-socialconnect > .ssw-social-btn > a > span {
    width: 58%;
    font-size: 9px;
    padding: 0;
    line-height: initial;
    font-weight: 700;
  }

  .ssw-accept-marketing {
    display: none !important
  }
  .ssw-socialconnect > div.ssw-social-btn > a {
    display: flex;
    font-size: 0;
    width: 100%;
    padding: 10px;
  }
  div#shopify-section-main-login {
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
  }


  .announcement-bar-section,
  .section-header,
  .shopify-section-group-footer-group {
    display: none
  }
  body {
    background-color: var(--primary-color-2, #F3EFEA) !important;
  }

  .site-logo {
    margin: 30px auto;
    text-align: center;
  }
  .login {
    border-radius: 10px;
    background: var(--white, #FFF);
    /* Card Shadow */
    box-shadow: 0 10px 30px 0 rgba(0, 0, 0, 0.05);
  }
  h1#login,
  h1#recover {
    color: var(--black-black-text, #000);
    text-align: center;
    font-family: Cormorant;
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  .customer .field {
    display: block;
    text-align: left;
    position: relative;
  }
  .eyes {
    position: absolute;
    top: 40px;
    right: 15px;
  }
  .focus-none {
    box-shadow: none !important;
    outline: 0 !important;
    text-align: center;
  }
  a {
    color: var(--black-black, #000);
    font-family: Nunito;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-decoration-line: underline;
  }

  .field__input:focus,
  .field__input:not(:placeholder-shown),
  .field__input:-webkit-autofill,
  .customer .field input:focus,
  .customer .field input:not(:placeholder-shown),
  .customer .field input:-webkit-autofill {
    padding: 0 15px;
    margin: 0;
    -webkit-appearance: none;
    color: var(--black-grey-3, #B0B0B0);
    font-family: Nunito;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  span {
    margin-right: 10px;
  }
  .customer .field input {
    margin-bottom: 0 !important;
  }
  .customer .field {
    margin: 2rem 0 0 !important;
  }
{%- endstyle -%}

{{ page.handle }}
<div class='site-logo'>
  <a href="/">
    <img class='account-logo' src='https://cdn.shopify.com/s/files/1/0779/1745/4639/files/image_6.png' />
  </a>
</div>
<br>
<div class="customer login section-{{ section.id }}-padding">


  <h1 id="recover" tabindex="-1">
    {{ 'customer.recover_password.title' | t }}
    <hr style="margin-top: 15px;background: #E7E7E7;margin-bottom:0">
  </h1>


  <div>

    <div class='form-container'>
      <p>
        Type in your email address below and we'll send you an email with instructions on how to create a new password
      </p>
      {%- form 'recover_customer_password' -%}
        {% assign recover_success = form.posted_successfully? %}
        <div class="field" style="width: 100%;">
          <label for="RecoverEmail">
            {{ 'customer.login_page.email' | t }}
          </label>
          <input
            type="email"
            value=""
            name="email"
            id="RecoverEmail"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
            aria-invalid="true"
            aria-describedby="RecoverEmail-email-error"
            autofocus
            {% endif %}
            placeholder="{{ 'customer.login_page.email' | t }}">

        </div>
        {%- if form.errors -%}
          <small id="RecoverEmail-email-error" class="form__message">
            <svg
              aria-hidden="true"
              focusable="false"
              viewBox="0 0 13 13">
              <circle
                cx="6.5"
                cy="6.50049"
                r="5.5"
                stroke="white"
                stroke-width="2" />
              <circle
                cx="6.5"
                cy="6.5"
                r="5.5"
                fill="#EB001B"
                stroke="#EB001B"
                stroke-width="0.7" />
              <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white" />
              <path
                d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z"
                fill="white"
                stroke="#EB001B"
                stroke-width="0.7">
            </svg>
            {{ form.errors.messages.form }}
          </small>
        {%- endif -%}

        <button style='text-transform:none'>
          Reset Password
        </button>


      {%- endform -%}
    </div>

    <hr style="margin: 0;background: #E7E7E7;">
    <span>Donâ€™t have an account?</span>
    <a href="{{ routes.account_register_url }}">
      Create an Account
    </a>
  </div>


  <h1 id="login" tabindex="-1">
    {{ 'customer.login_page.title' | t }}
    <hr style="margin-top: 15px;background: #E7E7E7;margin-bottom:0">
  </h1>
  <div>
    {%- if recover_success == true -%}
      <h3
        class="form__message"
        tabindex="-1"
        autofocus>
        <svg
          aria-hidden="true"
          focusable="false"
          viewBox="0 0 13 13">
          <path
            d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z"
            fill="#428445"
            stroke="white"
            stroke-width="0.7" />
          <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white" />
          <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
        </svg>
        {{ 'customer.recover_password.success' | t }}
      </h3>
    {%- endif -%}
    <div class='form-container'>
      {%- form 'customer_login', novalidate: 'novalidate' -%}
        <img style="width:100%" src="https://cdn.shopify.com/s/files/1/0779/1745/4639/files/divider.png?v=1690197418" />

        {%- if customer -%}
          <p style="color:#03a300">Account created, Sign in to your profile</p>
        {%- endif -%}

        {%- if form.posted_successfully? -%}

          {%- elsif form.errors -%}
            <h2
              class="form__message"
              tabindex="-1"
              autofocus>
              <svg
                aria-hidden="true"
                focusable="false"
                role="presentation">
                <use href="#icon-error" />
              </svg>

            </h2>
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#RegisterForm-{{ field }}">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
        {%- endif -%}


        <div class="field" style="width: 100%;">
          <label for="CustomerEmail">
            Email address / username
          </label>
          <input
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            {% if form.errors contains 'form' %}
            aria-invalid="true"
            {% endif %}
            placeholder=" Email address / username">

        </div>

        {%- if form.password_needed -%}
          <div class="field" style="width: 100%;">
            <label for="CustomerPassword">
              {{ 'customer.login_page.password' | t }}
            </label>
            <input
              type="password"
              value=""
              name="customer[password]"
              id="CustomerPassword"
              autocomplete="current-password"
              {% if form.errors contains 'form' %}
              aria-invalid="true"
              {% endif %}
              placeholder="{{ 'customer.login_page.password' | t }}">
            <div class='eyes' onclick="showPass()">
              {% render 'eye' %}
            </div>
          </div>

          <div class='row-split'>
            <div class='rem'>
              <input type='checkbox'>
              <label>Remember me?</label>
            </div>
            <a href="#recover">
              Forgot password?
            </a>
          </div>

        {%- endif -%}

        <button>
          login
        </button>

      {%- endform -%}

    </div>
    <hr style="margin: 0;background: #E7E7E7;">
    <span>Donâ€™t have an account?</span>
    <a href="{{ routes.account_register_url }}">
      Create an Account
    </a>
  </div>

  {%- if shop.checkout.guest_login -%}
    <div>
      <hr>
      <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

      {%- form 'guest_login' -%}
        <button>
          {{ 'customer.login_page.guest_continue' | t }}
        </button>
      {%- endform -%}
    </div>
  {%- endif -%}
</div>

<p>Need Help? Visit our
  <a href='/pages/faq'>
    FAQ
  </a>
  or
  <a href='/pages/contact/'>Contact  us.</a>
</p>
<script>
  function showPass() {
    var x = document.getElementById("CustomerPassword");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>
{% schema %}
  {
    "name": "t:sections.main-login.name",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}