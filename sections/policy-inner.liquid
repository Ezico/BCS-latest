{% render 'breadcrumb' %}

<div
  class="page-inner-small">
  <h2
    class="page-title">{{ page.title }}</h2>
  <div
    class="dec">{{ page.content }}</div>


  <div
    class="faqaccordion">
    {% for block in section.blocks %}
      <div
        class="at-item">
        <div
          class="at-title &nbsp;
          {%- if forloop.first -%}
            &nbsp; active
          {%- endif -%}">
          <h2>{{ block.settings.heading }}</h2>
        </div>
        <div
          class="at-tab"
          {%- if forloop.first -%}style="display: block;
                                                                                                                                      {%- endif -%} ">
          {{ block.settings.details }}
        </div>
      </div>
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "Page Content",
    "tag": "section",
    "class": "legal-class",
    "settings": [],
    "max_blocks": 50,
    "blocks": [
      {
        "name": "Page Content",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Add Heading"
          }, {
            "type": "inline_richtext",
            "id": "details",
            "default": "Ipsum",
            "label": "Text Editor"
          }
        ]
      }
    ]
  }
{% endschema %}