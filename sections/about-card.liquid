<div class="page-width about">
  <div class="grid-content">
    <h2 class="heading-title">The Baby Cot Shop Experience</h2>
  </div>

  <div class="row">
    {% for block in section.blocks %}
      <div class="about-card">
        {% if block.settings.heading == 'Customer care' %}
          <img
            class="minor-icon"
            src="https://cdn.shopify.com/s/files/1/0779/1745/4639/files/Icon.png"
          >
        {% elsif block.settings.heading == 'Interior Design Service' %}
          <img
            class="minor-icon"
            src="https://cdn.shopify.com/s/files/1/0779/1745/4639/files/Icon_1.png"
          >
        {% else %}
          <div class="rounded-icon">
            {{ block.settings.icon }}
          </div>
        {% endif %}
        <div class="card-title">{{ block.settings.heading }}</div>
        <div class="card-desc">
          {{ block.settings.desc }}
        </div>
        <a href="{{block.settings.link}}">
          <button class="outline-btn">
            <div class="icon-inc">
              <span> {{ block.settings.button_text }}</span>
              <i class="">{% render 'arrow-right' %}</i>
            </div>
          </button>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "services-items",
  "tag": "section",
  "class": "services",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.rich-text.blocks.heading.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Bespoke Product",
          "label": "Add title"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "icon svg"
        },
        {
          "type": "inline_richtext",
          "id": "desc",
          "default": "Talk about your brand",
          "label": "t:sections.rich-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Card"
    }
  ]
}
{% endschema %}
