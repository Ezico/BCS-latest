<div class="bispoke-section isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <h2 class="section_heading">FEATURED IN</h2>
  <hr style="margin: 30px 0;" />

  <div class="featured_container">
    <div class="row">
      {% for block in section.blocks %}
        <div class="featured_item">
        <img
          src="{{ block.settings.image | img_url: 'master' }}"
          alt="Harrolds"
          class="featured_img">
      </div>
      {% endfor %}
      
  </div>


</div>


{% schema %}
  {
    "name": "featured-in-section",
    "tag": "section",
    "class": "featured_in_section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [],
    "blocks": [{
      "type": "slide",
        "name": "t:sections.slideshow.blocks.slide.name",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Brand Logo"
          }
        ]}
    ],
    "presets": [
      {
        "name": "Featured in"
      }
    ]
  }
{% endschema %}