{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* social login css  */
  .ssw-socialconnect {
    display: flex;
    align-items: center;
    gap: 10px;
    justify-content: space-between;
  }
  .ssw-social-login-widget {
    padding: 0 2rem;
  }
  .ssw-socialconnect > .ssw-fbconnect.ssw-social-btn > a {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    min-height: inherit;
    background: #fff;
    border: 1px solid var(--black-grey-1, #E7E7E7);
    box-sizing: border-box;
    color: #000000 !important;
    font-family: Nunito;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-transform: uppercase;
  }
  .ssw-socialconnect > div.ssw-social-btn:last-child {
    margin-bottom: 0;
  }
  .ssw-socialconnect > .ssw-gconnect > a:hover {
    box-shadow: none;
  }
  .ssw-socialconnect > .ssw-gconnect > a {
    background: #fff;
    box-shadow: none;
    color: black;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    min-height: inherit;
    background: #fff;
    border: 1px solid var(--black-grey-1, #E7E7E7);
    box-sizing: border-box;
    color: #000000 !important;
    font-family: Nunito;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-transform: uppercase;
    padding: 14px !important;
  }
  .ssw-socialconnect > .ssw-fbconnect.ssw-social-btn > a > span,
  .ssw-socialconnect > .ssw-social-btn > a > span {
    width: 58%;
    font-size: 9px;
    padding: 0;
    line-height: initial;
    font-weight: 700;
  }
  .ssw-social-login-widget {
    margin-bottom: 0;
    text-align: center;
  }

  .ssw-socialconnect > div.ssw-social-btn > a {
    display: flex;
    font-size: 0;
    width: 100%;
    padding: 10px;
  }
  div#shopify-section-main-register {
    text-align: center;
  }
  .ssw-accept-marketing {
    display: none !important;
  }
  .customer ul a {
    display: inline;
    color: #C10000;
    font-family: Inter;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 2;
    text-decoration: none;
  }
  .section-{{ section.id }}-padding {
    padding-top: 21px;
    padding-bottom: 21px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
  }
  .announcement-bar-section,
  .section-header,
  .shopify-section-group-footer-group {
    display: none
  }
  body {
    background-color: var(--primary-color-2, #F3EFEA) !important;
  }

  .site-logo {
    margin: 15px auto;
    text-align: center;
  }
  .register {
    border-radius: 10px;
    background: var(--white, #FFF);
    /* Card Shadow */
    box-shadow: 0 10px 30px 0 rgba(0, 0, 0, 0.05);
  }
  .customer > h1 {
    color: var(--black-black-text, #000);
    text-align: center;
    font-family: Cormorant;
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  .customer .field {
    display: block;
    text-align: left;
    position: relative;
  }
  .eyes {
    position: absolute;
    top: 40px;
    right: 15px;
  }
  .focus-none {
    box-shadow: none !important;
    outline: 0 !important;
    text-align: center;
  }
  a {
    color: var(--black-black, #000);
    font-family: Nunito;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-decoration-line: underline;
  }

  .field__input:focus,
  .field__input:not(:placeholder-shown),
  .field__input:-webkit-autofill,
  .customer .field input:focus,
  .customer .field input:not(:placeholder-shown),
  .customer .field input:-webkit-autofill {
    padding: 0 15px;
    margin: 0;
    -webkit-appearance: none;
    color: var(--black-grey-3, #B0B0B0);
    font-family: Nunito;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  span {
    margin-right: 10px;
  }
  .ssw-control-group {
    margin-bottom: 10px;
    display: flex !important;
  }
  .login-link {
    color: var(--primary-color-4, #BDA399) !important;
    text-align: center;
    font-family: Nunito !important;
    font-size: 16px !important;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-decoration: none !important;
  }
  .field__input,
  .customer .field input {
    margin-bottom: 0 !important;
  }
  .form-container {
    padding: 0 1.5rem !important;
  }
  .customer .field {
    margin: 2rem 0 0 !important;
  }
{%- endstyle -%}

