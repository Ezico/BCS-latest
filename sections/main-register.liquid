  <h1>
    Create an Account
  </h1>
  <div class="form-container">
    {%- form 'create_customer', novalidate: 'novalidate' -%}
      <img style="width:100%" src="https://cdn.shopify.com/s/files/1/0779/1745/4639/files/divider.png?v=1690197418" />
      {%- if form.errors -%}
        <ul>
          {%- for field in form.errors -%}
            <li>
              {%- if field == 'form' -%}
                {{ form.errors.messages[field] }}
              {%- else -%}
                <a href="#RegisterForm-{{ field }}">
                  {{ form.errors.translated_fields[field] | capitalize }}
                  {{ form.errors.messages[field] }}
                </a>
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}
      <div class="field" style="width: 100%;">
        <label for="RegisterForm-FirstName">
          {{ 'customer.register.first_name' | t }}
        </label>
        <input
          type="text"
          name="customer[first_name]"
          id="RegisterForm-FirstName"
          {% if form.first_name %}
          value="{{ form.first_name }}"
          {% endif %}
          autocomplete="given-name"
          placeholder="{{ 'customer.register.first_name' | t }}">

      </div>
      <div class="field" style="width: 100%;">
        <label for="RegisterForm-LastName">
          {{ 'customer.register.last_name' | t }}
        </label>
        <input
          type="text"
          name="customer[last_name]"
          id="RegisterForm-LastName"
          {% if form.last_name %}
          value="{{ form.last_name }}"
          {% endif %}
          autocomplete="family-name"
          placeholder="{{ 'customer.register.last_name' | t }}">

      </div>
      <div class="field" style="width: 100%;">
        <label for="RegisterForm-email">
          Email address
        </label>
        <input
          type="email"
          name="customer[email]"
          id="RegisterForm-email"
          {% if form.email %}
          value="{{ form.email }}"
          {% endif %}
          spellcheck="false"
          autocapitalize="off"
          autocomplete="email"
          aria-required="true"
          {% if form.errors contains 'email' %}
          aria-invalid="true"
          aria-describedby="RegisterForm-email-error"
          {% endif %}
          placeholder="{{ 'customer.register.email' | t }}">

      </div>

      <div class="field" style="width: 100%;">
        <label for="RegisterForm-password">
          Create password
        </label>
        <input
          type="password"
          name="customer[password]"
          id="RegisterForm-password"
          aria-required="true"
          {% if form.errors contains 'password' %}
          aria-invalid="true"
          aria-describedby="RegisterForm-password-error"
          {% endif %}
          placeholder="{{ 'customer.register.password' | t }}">
        <div class='eyes' onclick="showPass()">
          {% render 'eye' %}
        </div>

      </div>

      <div class='row-split'>
        <div class='agreement'>
          <input type='checkbox' /><label>
            I agree to the
            <a href='/pages/terms-conditions-1'>terms & condition</a>
            of The Baby Cot Shop</label>
        </div>
      </div>
      <button>
        Create an Account
      </button>
    {%- endform -%}
  </div>

  <hr style="margin: 0;background: #E7E7E7;">
  <span>Already have an account?</span>
  <a class='login-link' href="/account/login">
    Login
  </a>
</div>

<p>Need Help? Visit our
  <a href='/pages/faq'>
    FAQ
  </a>
  or
  <a href='/pages/contact/'>Contact  us.</a>
</p>
<script>
  function showPass() {
    var x = document.getElementById("RegisterForm-password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>
