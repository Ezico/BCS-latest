<div class="collection-grid page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} animate--slide-in{% endif %}">

  <div class="grid-content">
    <h2>{{ section.settings.title }}</h2>
    <hr style="margin: 20px 0;">
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-parent">
          <a href="" style="text-decoration:none">
            <div class="col-child" style="background-image:url({{ block.settings.image | image_url }})">
              <br></div>
            <div class="child-content">
              <div class="collection__title_page">
                {{ block.settings.title }}
              </div>
              <a href="{{block.settings.link}}" tabindex="0">
                <button class="colletction_btn" tabindex="0">{{ block.settings.text }}</button>
              </a>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Collection Grid + button",
    "tag": "section",
    "class": "collection_grid_section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "section title"
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "Collection Grid",
        "limit": 6,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "select an image"
          }, {
            "type": "text",
            "id": "title",
            "label": "add a title",
            "default": "hello"
          }, {
            "type": "url",
            "id": "link",
            "label": "add a link"
          }, {
            "type": "text",
            "id": "text",
            "label": "button text",
            "default": "Click Me"
          }

        ]
      }
    ],
    "presets": [
      {
        "name": "Collection Grid with button"
      }
    ]
  }
{% endschema %}